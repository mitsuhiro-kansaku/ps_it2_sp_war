<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    parent="base">

    <!-- 注文シーケンス番号 -->
    <input name="orderSeq"/>
    <!-- 納期管理シーケンス番号 -->
    <input name="dlvEstSeq"/>
    <input name="SessionKey" />

    <on-start>
        <evaluate expression="SPANS030Service.init(orderSeq, dlvEstSeq)"
            result="flowScope.delivResp" />
    </on-start>
    
    <view-state id="SPANS030" view="ans/delivery/SPANS030" model="delivResp">
        <!-- 回答 -->
        <transition on="answer" validate="true">
            <evaluate expression="SPANS030Service.answer(delivResp, orderSeq, dlvEstSeq)"/>
            <set name="flashScope.isSuccess" value="true"></set>
        </transition>
        <!-- 明細追加 -->
        <transition on="addDetail" validate="false">
            <evaluate expression="SPANS030Service.addDetail(delivResp)"/>
        </transition>
        <!-- 削除 -->
        <transition on="deleteDetail" validate="false">
            <evaluate expression="SPANS030Service.deleteDetail(delivResp, requestParameters.detailIndex)"/>
        </transition>
        
    </view-state>

</flow>