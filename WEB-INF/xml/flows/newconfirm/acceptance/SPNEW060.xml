<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    parent="base">

    <var name="defaultSearchCondition" class="fw.domain.sp.acceptance.acceptanceinfo.AcceptanceInfoSearchCondition" />

    <on-start>
        <evaluate expression="SPNEW060Service.init()" result="flowScope.searchCondition" />
    </on-start>

    <decision-state id="isQuickLinkSearch">
       <if test="requestParameters.quickLink" then="searchByQuickLinkSearch" else="searchBySearchCondition"/>
    </decision-state>

    <action-state id="searchByQuickLinkSearch">
        <evaluate expression="SPNEW060Service.quickLink()"
            result="flowScope.searchCondition" />
        <transition on="success" to="SPNEW060" >
        <set name="flashScope.isQuickLink" value="true"/>
        </transition>
    </action-state>
    
    <action-state id="searchBySearchCondition">
        <evaluate expression="SPNEW060Service.init()"
            result="flowScope.searchCondition" />
        <transition on="success" to="SPNEW060" />
    </action-state>

    <view-state id="SPNEW060" model="searchCondition"
        view="newconfirm/acceptance/SPNEW060">
        
        <transition on="validate" validate="true">
            <set name="flowScope.isCurrentPageSearch" value="false" />
            <set name="flowScope.isShowList" value="true"></set>
            <evaluate expression="SPNEW060Service.search(searchCondition)"></evaluate>
        </transition>
        <transition on="search" to="SPNEW061" validate="false"/>
        <transition on="downloadValidate" validate="true">
            <evaluate expression="SPNEW060Service.downloadValidate(searchCondition)" result="flashScope.isDownLoadValidate"/>
        </transition>
        <transition on="download" validate="false">
            <evaluate expression="SPNEW060Service.download(searchCondition)"/>
        </transition>
        
        <transition on="quickLinkSearch" to="SPNEW061" validate="false">
            <set name="flowScope.isCurrentPageSearch" value="false" />
            <set name="flowScope.isShowList" value="true"></set>
        </transition>
        
        <transition on="back" to="home" validate="false" />
    </view-state>

    <subflow-state id="SPNEW061" subflow="newconfirm/acceptance/SPNEW061">
        <input name="searchCondition" value="searchCondition" />
        <input name="isCurrentPageSearch" value="isCurrentPageSearch" />
        <transition on="back" to="SPNEW060">
            <set name="flowScope.isCurrentPageSearch" value="true" />
        </transition>
    </subflow-state>

</flow>