<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="base">

	<!-- 新着注文（検索部） -->
	<var name="defaultSearchCondition" class="fw.domain.sp.order.OrderInfoSearchCondition" />
    <on-start>
        <evaluate expression="SPNEW030Service.init(requestParameters.infoCd)"
            result="flowScope.searchCondition" />
        <set name="flowScope.isCurrentPageSearch" value="false" />
    </on-start>
	<view-state id="SPNEW030" model="searchCondition"
		view="newconfirm/order/SPNEW030">
		<transition on="validate" validate="true">
			<set name="flowScope.isCurrentPageSearch" value="false" />
			<set name="flowScope.isShowList" value="true"></set>
			<evaluate expression="SPNEW030Service.search(searchCondition)"></evaluate>
		</transition>
		<transition on="search" to="list" validate="false" />
        <!-- 　ダウンロード の場合-->
        <transition on="downloadValidate" validate="true">
            <evaluate expression="SPNEW030Service.downloadValidate(searchCondition)" result="flashScope.isDownLoadValidate"/>
        </transition>
        <transition on="download" validate="false">
            <evaluate expression="SPNEW030Service.download(searchCondition)"/>
        </transition>
		<transition on="back" to="home" validate="false" />
	</view-state>

	<subflow-state id="list" subflow="newconfirm/order/SPNEW031">
		<input name="searchCondition" value="searchCondition" />
		<input name="isCurrentPageSearch" value="isCurrentPageSearch" />
		<!-- 強化-01734-000　2013/06/17 ADD SBO_KANGJW START -->
		<input name="infoCd" value="requestParameters.infoCd" />
		<!-- 強化-01734-000　2013/06/17 ADD SBO_KANGJW END -->
		<transition on="back" to="SPNEW030">
			<set name="flowScope.isCurrentPageSearch" value="true" />
		</transition>
	</subflow-state>
</flow>