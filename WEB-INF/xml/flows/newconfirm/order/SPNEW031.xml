<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="base">
	<!-- 新着注文（一覧） -->

	<!-- 注文情報新着確認 -->
	<var name="orderInfoNewDop" class="fw.domain.sp.order.OrderInfoNewDop" />
	
	<!-- 注文識別情報 -->
	<var name="orderIdentify" class="fw.domain.sp.order.OrderIdentify" />

	<input name="searchCondition" />
	<input name="isCurrentPageSearch" />
    <!-- 強化-01734-000　2013/06/17 ADD SBO_KANGJW START -->
    <input name="infoCd" />
    <!-- 強化-01734-000　2013/06/17 ADD SBO_KANGJW END -->
    <decision-state id="isSearchByKey">
        <if test="flowScope.isCurrentPageSearch" then="searchByKey" else="searchByCondition" />
    </decision-state>

	<action-state id="searchByCondition">
		<evaluate expression="SPNEW031Service.init(searchCondition)"
			result="flowScope.orderList" />
		<transition to="SPNEW031" />
	</action-state>

	<action-state id="searchByKey">
		<evaluate expression="SPNEW031Service.page(searchCondition)"
			result="flowScope.orderList" />
		<transition to="SPNEW031" />
	</action-state>

	<!-- 新着注文（一覧） -->
	<view-state id="SPNEW031" model="orderList"
		view="newconfirm/order/SPNEW031">
		<transition on="order" validate="false">
			<evaluate expression="SPNEW031Service.order(searchCondition)"
				result="flowScope.orderList" />
		</transition>
		<transition on="page" validate="false">
			<evaluate expression="SPNEW031Service.page(searchCondition)"
				result="flowScope.orderList" />
		</transition>
		<transition on="back" to="home" validate="false" />
       
		<!-- 新着注文確認 -->
		<transition on="newConfirm" validate="true" to="searchByKey">
			<evaluate expression="SPNEW031Service.newConfirm(orderList)" />
			<set name="flashScope.isSuccess" value="true"></set>
		</transition>
		<!-- 新着注文新着全件確認 -->
		<transition on="newConfirmAll" validate="true" to="searchByKey">
			<evaluate expression="SPNEW031Service.newConfirmAll(orderList)" />
			<set name="flashScope.isSuccess" value="true"></set>
		</transition>
		<!-- 詳細 -->
         <transition on="detailValidate" validate="false">
            <set name="orderIdentify.orderSeq" value="requestParameters.orderSeq"/><!-- 注文シーケンス番号 -->
            <set name="orderIdentify.lastUpdDate" value="requestParameters.lastUpdDate"/><!-- 最終更新日時 -->
            <set name="flashScope.isShowDetail" value="true"/>
        </transition>
        <!--
        <transition on="downloadCooperation" validate="false">
            <evaluate expression="SPNEW031Service.downloadFileCooperation()"/>
        </transition>
        -->
		<transition on="detail" to="SPNEW032" validate="false" />
	</view-state>
	<!-- 詳細 -->
	<subflow-state id="SPNEW032" subflow="newconfirm/order/SPNEW032">
		<input name="orderIdentify" value="orderIdentify" />
	</subflow-state>
</flow>