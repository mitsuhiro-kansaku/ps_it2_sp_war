<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    parent="base">

    <var name="prcRevIdentify" class="fw.domain.sp.pricerevision.PriceRevisionIdentify" />
    
    <input name="searchCondition" />
    <input name="isCurrentPageSearch" />

    <decision-state id="isSearchByKey">
       <if test="flowScope.isCurrentPageSearch" then="searchByKey" else="searchByCondition" />
    </decision-state>
    
    <action-state id="searchByCondition">
        <evaluate expression="SPNEW131Service.init(searchCondition)"
            result="flowScope.priceRevReqInfoList" />
        <transition to="SPNEW131" />
    </action-state>

    <action-state id="searchByKey">
        <evaluate expression="SPNEW131Service.page(searchCondition)"
            result="flowScope.priceRevReqInfoList" />
        <transition to="SPNEW131" />
    </action-state>

    <view-state id="SPNEW131" model="priceRevReqInfoList"
        view="newconfirm/prcrev/SPNEW131">
        <transition on="order" validate="false">
            <evaluate expression="SPNEW131Service.order(searchCondition)"
                result="flowScope.priceRevReqInfoList" />
        </transition>
        <transition on="page" validate="false">
            <evaluate expression="SPNEW131Service.page(searchCondition)"
                result="flowScope.priceRevReqInfoList" />
        </transition>
        <transition on="back" to="home" validate="false" />
        <transition on="newConfirm" validate="true" to="searchByKey">
            <evaluate expression="SPNEW131Service.newConfirm(priceRevReqInfoList)" />
            <set name="flashScope.isSuccess" value="true"></set>
        </transition>
        <transition on="newConfirmAll" validate="true" to="searchByKey">
            <evaluate expression="SPNEW131Service.newConfirmAll()" />
            <set name="flashScope.isSuccess" value="true"></set>
        </transition>
        <transition on="download" validate="false">
            <evaluate expression="SPAttachFileService.downloadFromSPriceReqAttachDetail(requestParameters.seqNo)"/>
        </transition>
    </view-state>
</flow>