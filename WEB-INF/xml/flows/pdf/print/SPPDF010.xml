<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    parent="base">
    
    <var name="defaultSearchCondition" class="fw.domain.sp.printlist.PrintSearchCondition" />
    
    <!-- 検索ボタンを押下する場合 -->
    <on-start>
        <evaluate expression="SPPDF010Service.init()" result="flowScope.searchCondition" />
    </on-start>
    
    <view-state id="SPPDF010" view="pdf/print/SPPDF010" model="searchCondition">
        <transition on="validate" validate="true">
            <set name="flowScope.isCurrentPageSearch" value="false" />
            <set name="flowScope.isShowList" value="true"></set>
            <evaluate expression="SPPDF010Service.search(searchCondition)"></evaluate>
        </transition>
        <transition on="search" to="SPPDF020" validate="false">
        </transition>
        <transition on="back" to="home" validate="false"/>
    </view-state> 
    <subflow-state id="SPPDF020" subflow="pdf/print/SPPDF020" > 
        <input name="searchCondition" value="searchCondition" />
        <input name="isCurrentPageSearch" value="isCurrentPageSearch" />
        <input name="reportNameList" value="reportNameList" />
        <transition on="back" to="SPPDF010" >
            <set name="flowScope.isCurrentPageSearch" value="true" />
        </transition>
    </subflow-state>   
</flow>