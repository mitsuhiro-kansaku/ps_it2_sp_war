<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    parent="base">
    <var name="defaultSearchCondition" class="fw.domain.sp.usermaster.UserMasterSearchCondition" />
     <on-start>
        <evaluate expression="SPMST030Service.init()"
            result="flowScope.searchCondition" />
    </on-start> 
    <view-state id="SPMST030" model="searchCondition"
        view="mst/user/SPMST030">
        <transition on="validate" validate="true">
            <set name="flowScope.isCurrentPageSearch" value="false" />
            <set name="flowScope.isShowList" value="true"></set>
        </transition>
        <transition on="search" to="SPMST040" validate="false" >
            <evaluate expression="SPMST030Service.search(searchCondition)"></evaluate>
        </transition>
        <transition on="create" to="SPMST050Edit" validate="false" />
        <transition on="back" to="home" validate="false" /> 
    </view-state>
    
    <subflow-state id="SPMST040" subflow="mst/user/SPMST040">
        <input name="searchCondition" value="searchCondition" />
        <input name="isCurrentPageSearch" value="isCurrentPageSearch" />
        <transition on="back" to="SPMST030" >
            <set name="flowScope.isCurrentPageSearch" value="true" />
        </transition>
    </subflow-state>
    
    <subflow-state id="SPMST050Edit" subflow="mst/user/SPMST050Edit">
        <transition on="back" to="SPMST030"/>
         <on-exit>
            <set name="flowScope.isShowList" value="false"/>
        </on-exit>
    </subflow-state>

</flow>