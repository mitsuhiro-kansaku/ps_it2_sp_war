<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    parent="base">
    
     <var name="identify" class="fw.domain.sp.usermaster.UserMasterIdentify" />
   <input name="searchCondition" />
    <input name="isCurrentPageSearch" />
    <decision-state id="isSearchByKey">
       <if test="flowScope.isCurrentPageSearch" then="searchByKey" else="searchByCondition" />
    </decision-state>
    <action-state id="searchByCondition">
        <evaluate expression="SPMST040Service.init(searchCondition)" result="flowScope.itemList" />
        <transition to="SPMST040"/>
    </action-state>

    <action-state  id="searchByKey">
        <evaluate expression="SPMST040Service.page(searchCondition)" result="flowScope.itemList" />
        <transition to="SPMST040"/>
    </action-state> 

    <view-state id="SPMST040" view="mst/user/SPMST040" model="identify">
        <transition on="editValidate" validate="false">
            <set name="flashScope.isShowUpdate" value="true"></set>
        </transition>
        <transition on="edit" to="SPMST050" validate="true" />
        <transition on="deleteValidate" validate="false">
            <set name="flashScope.isShowDelete" value="true"></set>
        </transition>
        <transition on="delete" to="SPMST050Delete" validate="true" />
         <transition on="order" validate="false">
            <evaluate expression="SPMST040Service.order(searchCondition)"
                result="flowScope.itemList" />
        </transition>
        <transition on="page" validate="false">
            <evaluate expression="SPMST040Service.page(searchCondition)"
                result="flowScope.itemList" />
        </transition> 
        <transition on="back" to="home" validate="false" />
    </view-state>
    
    <subflow-state id="SPMST050" subflow="mst/user/SPMST050">
        <input name="identify" value="identify" />
    </subflow-state>

    <subflow-state id="SPMST050Delete" subflow="mst/user/SPMST050Delete">
        <input name="identify" value="identify" />
    </subflow-state>
    
</flow>