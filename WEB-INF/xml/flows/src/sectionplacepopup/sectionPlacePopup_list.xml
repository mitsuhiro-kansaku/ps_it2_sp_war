<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    parent="baseListNoButton">

    <var name="identify" class="fw.domain.mst.organization.sectionplace.SectionPlacePopupSearchCondition" />
    
    <decision-state id="isSearchByKey">
       <if test="flowScope.isCurrentPageSearch" then="searchByKey" else="searchByCondition" />
    </decision-state>
    
    <action-state id="searchByCondition" parent="baseListNoButton#searchByCondition">
        <transition to="sectionPlacePopupList"/>
    </action-state>

    <action-state id="searchByKey" parent="baseListNoButton#searchByKey">
        <transition to="sectionPlacePopupList"/>
    </action-state>

    <view-state id="sectionPlacePopupList" view="src/sectionplacepopup/sectionPlacePopup_list"
        parent="baseListNoButton#list">
    </view-state>
    
</flow>