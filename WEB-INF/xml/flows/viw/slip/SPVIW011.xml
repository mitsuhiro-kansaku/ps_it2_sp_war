<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="base">

	<input name="searchCondition" />
	
	<on-start>
	    <evaluate expression="SPVIW011Service.init(searchCondition)" result="flowScope.orderList" />
	</on-start>
	
	<view-state id="SPVIW011" model="orderList" view="viw/slip/SPVIW011">
	
	    <!-- クリックすると項目でソート -->
	    <transition on="order" validate="false">
	        <evaluate expression="SPVIW011Service.order(searchCondition)" result="flowScope.orderList" />
	    </transition>
	    
	    <!-- ページング -->
	    <transition on="page" validate="false">
	        <evaluate expression="SPVIW011Service.page(searchCondition)" result="flowScope.orderList" />
	    </transition>
	    
	    <!-- 詳細画面に移動する -->
	    <transition on="detail" to="SPVIW012" validate="false" />
	
	    <!-- back -->
	    <transition on="back" to="home" validate="false" />
	</view-state>
	
	<subflow-state id="SPVIW012" subflow="viw/slip/SPVIW012">
	   <input name="orderSeq" value="requestParameters.orderSeq" />
    </subflow-state>
      
</flow>