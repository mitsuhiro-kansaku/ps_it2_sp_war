<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="base">
      
    <var name="defaultSearchCondition" class="fw.domain.sp.utlsearch.UtlSearchCondition"/>
    <on-start>
        <evaluate expression="SPVIW010Service.init()" result="flowScope.searchCondition" />
    </on-start>
    <view-state id="SPVIW010" model="searchCondition" view="viw/slip/SPVIW010">
        <!-- チェック -->
        <transition on="validate" validate="true">
            <set name="flowScope.isShowList" value="true"></set>
        </transition>
        
        <!-- 検索 -->
        <transition on="search" to="SPVIW011" validate="false" >
        <evaluate expression="SPVIW010Service.search(searchCondition)"></evaluate>
        </transition>
        
        <!-- ダウンロード -->
        <transition on="downloadValidate" validate="true">
            <evaluate expression="SPVIW010Service.downloadValidate(searchCondition)" result="flashScope.isDownLoadValidate"/>
        </transition>
        <transition on="download" validate="false">
            <evaluate expression="SPVIW010Service.download(searchCondition)"/>
        </transition>
        
        <!-- back -->
        <transition on="back" to="home" validate="false" />
        
    </view-state>
    
    <subflow-state id="SPVIW011" subflow="viw/slip/SPVIW011">
        <input name="searchCondition" value="searchCondition" />
    </subflow-state>
    
</flow>